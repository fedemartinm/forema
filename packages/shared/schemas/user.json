{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "user.json",
  "type": "object",
  "title": "User",
  "description": "Every person who uses Forema",
  "required": ["userId", "name", "username", "email", "role"],
  "additionalProperties": true,
  "properties": {
    "userId": {
      "$id": "#/properties/userId",
      "type": "string",
      "title": "User Id",
      "description": "Unique User Identifier"
    },
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "description": "User's full name",
      "title": "Name",
      "maxLength": 50
    },
    "username": {
      "$id": "#/properties/username",
      "type": "string",
      "title": "Username",
      "description": "Name that uniquely identifies user ",
      "pattern": "^[a-zA-Z_$][a-zA-Z_$0-9]*$",
      "maxLength": 16,
      "minLength": 3
    },
    "avatarUrl": {
      "$id": "#/properties/avatarUrl",
      "type": "string",
      "title": "The avatarUrl schema",
      "description": "Link to user's avatar or base64 encoded image",
      "maxLength": 400000
    },
    "email": {
      "$id": "#/properties/email",
      "type": "string",
      "title": "Email",
      "description": "User's email",
      "maxLength": 320,
      "pattern": "@.*?\\."
    },
    "role": {
      "$id": "#/properties/role",
      "type": "string",
      "title": "Role",
      "description": "Defines permissions for user",
      "pattern": "^admin|moderator|user$"
    }
  }
}
